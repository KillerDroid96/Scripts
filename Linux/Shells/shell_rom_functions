    deactivate
    rm -rf "${HOME}/venv"
}

function sync_repo() {
    header "SYNCING LATEST SOURCES"; echo
    repo sync -j$( nproc --all ) --force-sync -c --no-clone-bundle --no-tags --optimized-fetch --prune
}

